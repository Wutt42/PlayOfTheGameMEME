<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.atlassc.playofthegamememe.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >

                <TextView
                    android:id="@+id/title_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="MAKING YOUR OWN PLAY OF THE GAME"
                    android:textSize="20dp" />

                <RelativeLayout
                    android:id="@+id/preview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@id/title_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#000"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@+id/text_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="70dp"
                        android:clickable="true"
                        android:descendantFocusability="blocksDescendants"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_potg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:maxLines="1"
                            android:text="PLAY OF THE GAME  "
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:clickable="false"
                            android:maxLines="1"
                            android:text="YOUR NAME  "
                            android:textColor="#FFE129"
                            android:textSize="30sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/text_character"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:clickable="false"
                            android:maxLines="1"
                            android:text="AS YOUR CHARACTER  "
                            android:textColor="#fff"
                            android:textSize="16sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/input_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/preview"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_potg_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_potg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="PLAY OF THE GAME "
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="YOUR NAME"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_character_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_character"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="YOUR CHARACTER"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_group"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/select_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="select" />

                    <Button
                        android:id="@+id/capture_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="capture" />

                    <Button
                        android:id="@+id/save_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="save" />

                    <Button
                        android:id="@+id/share_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="share" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttons"
                    android:layout_marginLeft="5dp"
                    android:text="tips:\n
            1. choose a image or capture a photo.\n
            2. fill your name and character.\n
            3. drag to move the texts.\n
            4. save or share your POTG!\n
            @ShinChven
            " />
            </RelativeLayout>
        </ScrollView>
    </FrameLayout>
</layout>